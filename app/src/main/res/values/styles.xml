<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="some_id">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.03</item>
        <item name="android:fontFamily">@font/notosans</item>
    </style>


    <style name="recyclerview_number">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.03</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
    </style>

    <style name="course_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.03</item>
        <item name="android:fontFamily">@font/notosans_extralight</item>
    </style>

    <style name="courseMore_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.03</item>
        <item name="android:fontFamily">@font/notosans_extralight</item>
    </style>


    <style name="cardview_subjectText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/notosans_extralight</item>
    </style>


    <style name="cardview_titleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/notosans</item>
    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
    </style>

</resources>
